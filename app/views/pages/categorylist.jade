extends ../layout

block content
	.container
		.row
			table.table.table-hover.table-bordered
				thead
					tr
						th 名字
						th 时间						
						th 查看
						th 修改
						th 删除
				tbody
					each item in categories
						tr(class="item-id-#{item.id}")
							td #{item.name}							
							//- 使用moment模块
							td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
							td: a(target="_blank", href="../category/#{item._id}") 查看
							td: a(target="_blank", href="../admin/category/#{item._id}") 修改
							td: button.btn.btn-danger.del(type="button", data-id="#{item._id}") 删除	